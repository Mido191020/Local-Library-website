
extends layout

block content
  h1= title

  form(method='POST')
    .form-group
      label(for='firstName') First Name:
      input#firstName.form-control(type='text', placeholder='First name' name='firstName' required value=(author ? author.firstName : ''))

    .form-group
      label(for='familyName') Family Name:
      input#familyName.form-control(type='text', placeholder='Family name' name='familyName' required value=(author ? author.familyName : ''))

    .form-group
      label(for='date_of_birth') Date of Birth:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(author ? author.date_of_birth.toISOString().split('T')[0] : ''))

    .form-group
      label(for='date_of_death') Date of Death:
      input#date_of_death.form-control(type='date' name='date_of_death' value=(author ? author.date_of_death.toISOString().split('T')[0] : ''))

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      each error in errors
        li!= error.msg
